@{
    ViewData["Title"] = "Home Page";
    List<Product> TopProdByPurchase = (List<Product>)ViewData["TopProdByPurchase"];
    List<Product> TopProdByRatings = (List<Product>)ViewData["TopProdByRatings"];
}

<style>
    
</style>

<div class="recommendations">
    <div class="bestsellers">
        <h4>Best Sellers</h4>
        <div class="row home-row">
            @{
                foreach (Product bs in TopProdByPurchase)
                {
                    <div class="col-sm-12 col-md-6 col-lg-3">
                        <div class="card home-card">
                            <a href="~/ProductDetail/Index/@bs.Id">
                                <img class="home-pic" src=@bs.ImageSrc alt=@bs.ProductName />
                                <div class="card-body">
                                    <h6 class="card-title">@bs.ProductName</h6>
                                </div>
                            </a>
                            <a href="~/addtocart/@bs.Id"><button type="button" class="btn-dark btn-block home-buy-button">@string.Format($"{bs.Price:$#,##0.00}")  Add to Cart</button></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="toprated">
        <h4>Top Rated</h4>
        <div class="row">
            @{
                foreach (Product ts in TopProdByRatings)
                {
                    <div class="col-sm-12 col-md-6 col-lg-3">
                        <div class="card home-card">
                            <a href="~/ProductDetail/Index/@ts.Id">
                                <img class="home-pic" src=@ts.ImageSrc alt=@ts.ProductName />
                                <div class="card-body">
                                    <h6 class="card-title">@ts.ProductName</h6>
                                </div>
                            </a>
                            <a href="~/addtocart/@ts.Id"><button type="button" class="btn-dark btn-block home-buy-button">@string.Format($"{ts.Price:$#,##0.00}")  Add to Cart</button></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
